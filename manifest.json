{
  "manifest_version": 3,
  "name": "About My Professor",
  "version": "1.0",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://my.ucsc.edu/*",
    "https://pisa.ucsc.edu/*",
    "https://campusdirectory.ucsc.edu/*",
    "https://www.ratemyprofessors.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://pisa.ucsc.edu/*", "https://my.ucsc.edu/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["https://pisa.ucsc.edu/*", "https://my.ucsc.edu/*"]
    }
  ]
}
